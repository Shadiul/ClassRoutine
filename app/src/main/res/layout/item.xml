<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/day_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background_1" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/class_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wireless Programming"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/time_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 AM - 11:30 AM"
                android:textColor="#FFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/room_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="AB1 303"
                android:textColor="#FFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/class_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wireless Programming"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/time_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 AM - 11:30 AM"
                android:textColor="#FFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/room_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="AB1 303"
                android:textColor="#FFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/class_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wireless Programming"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/time_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 AM - 11:30 AM"
                android:textColor="#FFF"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/room_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="AB1 303"
                android:textColor="#FFF"
                android:textSize="14dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>